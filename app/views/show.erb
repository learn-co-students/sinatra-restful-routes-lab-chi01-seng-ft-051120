<h1> Recipe Show Page </h1>

<h2><%= @recipe.name %></h2>
<p><%= @recipe.ingredients %></p>
<p><%= @recipe.cook_time %></p>

<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Recipe">
</form>